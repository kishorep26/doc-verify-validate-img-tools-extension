{
    "manifest_version": 3,
    "name": "Document Verify & Image Tools",
    "version": "1.0.0",
    "description": "Verify Aadhar & PAN cards, and process images with resize, crop, compress & convert tools",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_title": "Toggle Document Verify Panel"
    },
    "permissions": [
        "storage",
        "downloads",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "popup.html",
                "popup.js",
                "styles.css",
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}