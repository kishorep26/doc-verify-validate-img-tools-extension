{
    "manifest_version": 3,
    "name": "Document Verify & Image Tools",
    "version": "1.0.1",
    "description": "Verify Aadhar & PAN cards, and process images with resize, crop, compress & convert tools",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Document Verify & Image Tools"
    },
    "permissions": [
        "storage",
        "downloads"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}